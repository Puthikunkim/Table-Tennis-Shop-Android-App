<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@color/background_dark">

    <!-- You can use the same emptyâ€cart drawable, or swap for another icon -->
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/emptycart2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In to View Your Cart"
        android:textColor="@color/text_primary"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your shopping cart is only available when you're signed in."
        android:textColor="@color/text_secondary"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/signInButtonCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In Now"
        android:paddingHorizontal="32dp"
        android:paddingVertical="12dp"
        android:backgroundTint="@color/purple_500"
        android:textColor="@color/text_primary"/>
</LinearLayout>
