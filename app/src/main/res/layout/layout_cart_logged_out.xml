<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:paddingBottom="80dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="160dp"
        android:padding="24dp">

        <!-- You can use the same emptyâ€cart drawable, or swap for another icon -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/emptycart2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In to View Your Cart"
            android:textColor="@color/text_primary"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your shopping cart is only available when you're signed in."
            android:textColor="@color/text_secondary"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/signInButtonCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In Now"
            android:paddingHorizontal="32dp"
            android:paddingVertical="12dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/profile_grey"/>
    </LinearLayout>
</FrameLayout>
